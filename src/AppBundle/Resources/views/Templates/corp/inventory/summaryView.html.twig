{# Summary VIEW = 3 #}
<div class="col-xs-12 summary-view" ng-controller="inventorySummaryViewController" ng-show="view_type === 3">
    <div ng-show="loading === true" class="col-xs-12 text-center">
        <cube-grid-spinner></cube-grid-spinner>
    </div>
    <div ng-show="loading === false" class="col-xs-12">

        <div class="row">
            <div class="col-sm-5">
                <br>
                <div class="button-group-sm">
                    <button class="btn btn-sm btn-default">Hide Blueprints</button>
                    <button class="btn btn-sm btn-default">Hide Equipment</button>
                    <button class="btn btn-sm btn-default">Hide Ships</button>
                </div>
            </div>
            <div class="col-sm-7" >
                <uib-pagination ng-disabled="loading === true" class="pagination-sm pull-left" max-size="max_size" total-items="total_items" ng-model="page" ng-change="pageChanged()" rotate="false" boundry-links="true"></uib-pagination>
                <div class="pull-right">
                    <span class="small muted">Per Page</span>
                    <select ng-disabled="loading === true" style="width: 50px;" class="form-control" ng-model="per_page" ng-options="selection.value as selection.label for selection in per_page_selection">
                    </select>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="table-responsive">
                    <eve-data-table
                            table-headers="tableHeaders"
                            table-data="items"
                            image-width="image_width"
                            ng-if="loading === false">
                    </eve-data-table>
                </div>
            </div>
        </div>
    </div>
</div>
